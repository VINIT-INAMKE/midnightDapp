# Database
DB_CONN_URL=postgresql://user:password@host:port/database

# Django
SECRET_KEY=your-secret-key-here
DEBUG=True
DJANGO_ENV=development

# Storage (set to False for local storage)
USE_R2=False
USE_CLOUDINARY=False

# R2 Storage (optional - only if USE_R2=True)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=

# Cloudinary (optional - only if USE_CLOUDINARY=True)
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_CLOUD_NAME=

# CORS and CSRF
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
FRONTEND_SITE_URL=http://localhost:3000

# Email (Mailgun)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_SENDER_DOMAIN=your-mailgun-domain
FROM_EMAIL=noreply@yourdomain.com

# Payment Gateways
RAZORPAY_KEY_ID=your-razorpay-key
RAZORPAY_KEY_SECRET=your-razorpay-secret
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_SECRET_ID=your-paypal-secret

# Superuser (optional - for automatic creation)
CREATE_SUPERUSER=False
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=changeme
DJANGO_SUPERUSER_USERNAME=admin

# Logging
LOG_FILE=logs/django.log
LOG_LEVEL=INFO
